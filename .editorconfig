# .editorconfig
#
# EditorConfig for Lustre: https://editorconfig.org
#

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 8
indent_style = tab
max_line_length = 80

# C style config
[*.{c,cpp,h}]
indent_size = 8
indent_style = tab

# Python style config
[*.py]
indent_size = 8
indent_style = tab
